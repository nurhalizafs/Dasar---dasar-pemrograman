#include <iostream>
using namespace std;
int main ()
{
    int nilai [5]; 
    int jumlah = 0;
    for (int i=0; i<5; i++)
      {
        cout << "Input Nilai ke-" << (i +  1) << " : " ;
        cin >> nilai [i];
      }
    cout << "\n Nilai yang Anda masukkan " << endl;
    for (int i=0; i<5; i++)
      {
        jumlah += nilai [i];
        cout << "\n Nilai ke-" << (i + 1) << " adalah " << nilai [i] ;
      }
    cout << "\n\n Total Nilai : " << jumlah;
    return 0;
}
